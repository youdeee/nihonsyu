{
  "manifest_version": 3,
  "name": "サケタイムランキング表示",
  "version": "1.0",
  "description": "Display detailed information about selected text.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
    "resources": ["nihonsyuranking.csv"],
    "matches": ["<all_urls>"]
  }
  ],
  "action": {
    "default_title": "nihonsyu selection",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
